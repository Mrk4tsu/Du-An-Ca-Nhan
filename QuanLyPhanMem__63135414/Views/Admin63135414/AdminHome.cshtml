
@{
    ViewBag.Title = "AdminHome";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var user = (QuanLyPhanMem__63135414.Models.Extension.UserViewModel)Session["User"];
}
@if (Request.IsAuthenticated)
{
    <div class="page-item">
        <div class="card">
            <div class="card-body">
                <div class="mt-n22 px-6 container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12 text-center mx-auto">
                            <h4 class="text-uppercase text-secondary">Chào Mừng <span class="text-dribbble">@user.firstname @user.lastname</span> Đến Với Trang Quản Trị</h4>
                            <hr />
                        </div>
                        <div class="mt-6 col-xl-3 col-lg-6 col-md-12 col-12 mx-auto">
                            <div class="card bg-gradient-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="mb-0">Người dùng</h4>
                                        </div>
                                        <div class="icon-md bg-light-primary rounded-2">
                                            <i class="fa-solid fa-users fa-bounce"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h1 class="fw-bold">@ViewBag.TotalUsers</h1>
                                        <p class="mb-0">
                                            <a class="text-decoration-none text-black" href="@Url.Action("ListUser", "Admin63135414")">Xem ngay</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="mt-6 col-xl-3 col-lg-6 col-md-12 col-12 mx-auto">
                            <div class="card bg-gradient-warning">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="mb-0">Danh mục</h4>
                                        </div>
                                        <div class="icon-md rounded-2">
                                            <i class="fa-solid fa-box fa-bounce"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h1 class="fw-bold">@ViewBag.TotalCategories</h1>
                                        <p class="mb-0">
                                            <a class="text-decoration-none text-black" href="@Url.Action("ListCategory", "Categories63135414")">Xem ngay</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-6 col-xl-3 col-lg-6 col-md-12 col-12">
                            <div class="card bg-gradient-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="mb-0">Dự án</h4>
                                        </div>
                                        <div class="icon-md bg-light-primary rounded-2">
                                            <i class="fa-solid fa-file-zipper fa-bounce"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h1 class="fw-bold">@ViewBag.TotalProjects</h1>
                                        <p class="mb-0">
                                            <a class="text-decoration-none text-black" href="@Url.Action("ListCategory", "Categories63135414")">Xem ngay</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="mt-6 col-xl-3 col-lg-6 col-md-12 col-12">
                            <div class="card bg-gradient-danger">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="mb-0">Hình ảnh</h4>
                                        </div>
                                        <div class="icon-md bg-light-primary rounded-2">
                                            <i class="fa-solid fa-image fa-bounce"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <h1 class="fw-bold">@ViewBag.TotalProjectImgs</h1>
                                        <p class="mb-0">
                                            <a class="text-decoration-none text-black" href="@Url.Action("ListImage", "Images63135414")">Xem ngay</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <!-- Carousel -->
            <div class="card-body">
                <div id="demo" class="carousel slide" data-bs-ride="carousel">

                    <!-- Indicators/dots -->
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                    </div>

                    <!-- The slideshow/carousel -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/assets/admin/images/test/chicago.jpg" alt="Los Angeles" class="d-block" style="width:100%;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/assets/admin/images/test/la.jpg" alt="Chicago" class="d-block" style="width: 100%;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/assets/admin/images/test/ny.jpg" alt="New York" class="d-block" style="width: 100%; ">
                        </div>
                    </div>

                    <!-- Left and right controls/icons -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>

        </div>
    </div>
}