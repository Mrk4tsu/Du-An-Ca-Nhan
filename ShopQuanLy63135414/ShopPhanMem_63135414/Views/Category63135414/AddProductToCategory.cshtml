@{
    ViewBag.Title = "AddProductToCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("AddProductToCategory", "Category63135414", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Bổ sung sản phẩm</h5>
        </div>
        <div class="card-body">
            <p>@ViewBag.Message</p>

            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="productId" class="form-label">Product ID:</label>
                @Html.TextBox("productId", null, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label for="categoryId" class="form-label">Category:</label>
                @Html.DropDownList("categoryId", (IEnumerable<SelectListItem>)ViewBag.Categories, "Select a category", new { @class = "form-control", required = "required" })
            </div>

            <input type="submit" value="Add to Category" class="btn btn-primary" />
        </div>
    </div>
}
