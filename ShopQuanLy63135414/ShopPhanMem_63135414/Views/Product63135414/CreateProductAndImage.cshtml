            @Html.EditorFor(model => model.Product.description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product.description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="input-group">
        <input class="form-control" id="imageUpload" type="file" name="imageUpload" accept="image/*" onchange="previewImage(this)" />
        <label class="input-group-text" for="imageUpload">Wallpaper</label>
    </div>

    <img src="~/assets/product/productImgDefault.png" alt="Circular Image" class="rounded-5" id="imageUpload-preview" style="height:250px; border: 5px solid #fff;" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

