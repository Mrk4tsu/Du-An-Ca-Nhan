@model ShopPhanMem_63135414.Models.Catalog.ProductSystem.ProductAndImageViewModel
@{
    ViewBag.Title = "CreateProductAndImage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("CreateProductAndImage", "Product63135414", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Product</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Product.id, htmlAttributes: new { @class = "control-label col-md-2" })
