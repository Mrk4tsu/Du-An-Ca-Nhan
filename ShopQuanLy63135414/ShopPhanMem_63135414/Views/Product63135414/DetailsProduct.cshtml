        <div class="row d-flex justify-content-center">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="~/assets/product/@Model.ProductName/@Model.ImagePath" alt="@Model.ProductName" />
                    </div>


                    <div class="product__details__pic__slider owl-carousel">
                        @foreach (var imagePath in Model.ImagePaths)
                        {
                            <img data-imgbigurl="../../assets/product/@Model.ProductName/@imagePath"
                                 src="~/assets/product/@Model.ProductName/@imagePath" alt="@imagePath" />
                        }

                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.ProductName</h3>
                    <div class="product__details__price">$@Model.Price</div>
                    <p>
                        @Model.Description
                    </p>
                    <div class="col-md-9">
                        <div class="row d-flex">
                            @if (Session["User"] == null)
                            {
                                <div class="col-md-6">
                                    <button style="border: 0px;" class="primary-btn" data-toggle="modal" data-target="#loginRequestModal">Mua ngay</button>
                                </div>
                                <div class="col-md-6">
                                    <button type="submit" style="border: 0px;" class="heart-icon text-uppercase shadow" data-toggle="modal" data-target="#loginRequestModal">ADD TO CARD</button>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <button style="border: 0px;" class="primary-btn">Mua ngay</button>
                                </div>
                                <div class="col-md-6">
                                    <form action="@Url.Action("AddToCart", "Customer63135414")" method="post">
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <button type="submit" style="border: 0px;" class="heart-icon text-uppercase shadow">ADD TO CARD</button>
                                    </form>
                                </div>
                            }

                        </div>
                    </div>


                    <ul>
                        <li><b>Lượt xem:</b> <span> @Model.ViewCount </span></li>
                        <li><b>Lượt bán:</b> <span> @Model.SellCount </span></li>
