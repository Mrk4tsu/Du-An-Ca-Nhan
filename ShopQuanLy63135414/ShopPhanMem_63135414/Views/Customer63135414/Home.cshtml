@model List<ShopPhanMem_63135414.Models.Catalog.ProductSystem.ProductViewListVM>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="container set-bg" style="background-color: #E0E9DB">
    <section class="hero hero-normal container py-2">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All departments</span>
                    </div>
                    <ul>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <li><a href="@Url.Action("Products", "Customer63135414")">@category.categoryName</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="@Url.Action("Products", "Customer63135414")">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 362 456 789</h5>
                            <span>cskh247@shop.vn</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="categories py-5">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="../../assets/category/@category.categoryImage">
                                <h5><a style="background-color: rgb(127, 173, 57)" class="text-light" href="@Url.Action("Products", "Customer63135414")">@category.categoryName</a></h5>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </section>

    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="~/assets/banner/banner-1.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="~/assets/banner/banner-2.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured Section Begin -->


    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Sản phẩm mới</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter" id="featuredProducts">
                @if (ViewBag.ProductUploadViewModels != null)
                {
                    var productUploadViewModels = ViewBag.ProductUploadViewModels as List<ShopPhanMem_63135414.Models.Catalog.ProductSystem.ProductViewListVM>;
                    foreach (var productUpload in productUploadViewModels)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="product__discount__item">
                                <div class="product__discount__item__pic set-bg"
                                     data-setbg="../../assets/product/defaultImage.png">
                                    <div class="product__discount__percent">New</div>
                                    <ul class="product__item__pic__hover">
                                        @if (Session["User"] == null)
                                        {
                                            <button type="submit" data-toggle="modal" data-target="#loginRequestModal" class="site-btn"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                                        }
                                        else
                                        {
                                            <form id="add_to_card" action="@Url.Action("AddToCart", "Customer63135414")" method="post">
                                                <input type="hidden" name="productId" value="@productUpload.Id" />
                                                <button type="submit" class="site-btn"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                                            </form>
                                        }

                                    </ul>
                                </div>
                                <div class="product__discount__item__text">
                                    @if (productUpload.CategoryName != null)
                                    {
                                        <span class="text-secondary">@productUpload.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span>Không có danh mục</span>
                                    }
                                    <h5><a href="@Url.Action("DetailsProduct", "Product63135414", new { id = productUpload.Id })" class="text-info fw-semibold text-uppercase">@productUpload.ProductName</a></h5>
                                    <h5 class="fw-bold">$ @productUpload.Price</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>






    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Mua nhiều</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter" id="featuredProducts">
                @if (ViewBag.ProductBestSellViewModels != null)
                {
                    var productUploadViewModels = ViewBag.ProductBestSellViewModels as List<ShopPhanMem_63135414.Models.Catalog.ProductSystem.ProductViewListVM>;
                    foreach (var productUpload in productUploadViewModels)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="product__discount__item">
                                <div class="product__discount__item__pic set-bg"
                                     data-setbg="../../assets/product/defaultImage.png">
                                    <div class="product__discount__percent">Hot</div>
                                    <ul class="product__item__pic__hover">
                                        @if (Session["User"] == null)
                                        {
                                            <button type="submit" data-toggle="modal" data-target="#loginRequestModal" class="site-btn"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                                        }
                                        else
                                        {
                                            <form id="add_to_card" action="@Url.Action("AddToCart", "Customer63135414")" method="post">
                                                <input type="hidden" name="productId" value="@productUpload.Id" />
                                                <button type="submit" class="site-btn"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                                            </form>
                                        }
                                    </ul>
                                </div>
                                <div class="product__discount__item__text">
                                    @if (productUpload.CategoryName != null)
                                    {
                                        <span class="text-secondary">@productUpload.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span>Không có danh mục</span>
                                    }
                                    <h5><a href="@Url.Action("DetailsProduct", "Product63135414", new { id = productUpload.Id })" class="text-info fw-semibold text-uppercase">@productUpload.ProductName</a></h5>
                                    <h5 class="fw-bold">$ @productUpload.Price</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>








    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Lượt xem nhiều</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter" id="featuredProducts">
                @foreach (var productViewModel in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__discount__item">
                            <div class="product__discount__item__pic set-bg"
                                 data-setbg="../../assets/product/defaultImage.png">
                                <div class="product__discount__percent">Hot</div>
                                <ul class="product__item__pic__hover">
                                    @if (Session["User"] == null)
                                    {
                                        <button type="submit" data-toggle="modal" data-target="#loginRequestModal" class="site-btn"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                                    }
                                    else
                                    {
                                        <form id="add_to_card" action="@Url.Action("AddToCart", "Customer63135414")" method="post">
                                            <input type="hidden" name="productId" value="@productViewModel.Id" />
                                            <button type="submit" class="site-btn"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                                        </form>
                                    }
                                </ul>
                            </div>
                            <div class="product__discount__item__text">
                                @if (productViewModel.CategoryName != null)
                                {
                                    <span class="text-secondary">@productViewModel.CategoryName</span>
                                }
                                else
                                {
                                    <span>Không có danh mục</span>
                                }
                                <h5><a href="@Url.Action("DetailsProduct", "Product63135414", new {id = productViewModel.Id})" class="text-info fw-semibold text-uppercase">@productViewModel.ProductName</a></h5>
                                <h5 class="fw-bold">$ @productViewModel.Price</h5>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </section>
</div>

<script>
    $(document).ready(function () {
        $("#add_to_card").submit(function (e) {
            e.preventDefault();

            $.ajax({
                url: $(this).attr("action"),
                type: $(this).attr("method"),
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        // Product added successfully, show success modal
                        $('#successModal').modal('show');
                    } else {
                        // Product not added, show error modal
                        $('#errorModal').modal('show');
                    }
                },
                error: function () {
                    // Handle the error case
                }
            });
        });
    };
</script>




