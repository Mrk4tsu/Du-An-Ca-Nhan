}

<div class="container set-bg" style="background-color: #E0E9DB">
    <section class="hero hero-normal container py-2">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All departments</span>
                    </div>
                    <ul>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <li><a href="@Url.Action("Products", "Customer63135414")">@category.categoryName</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="@Url.Action("Products", "Customer63135414")">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 362 456 789</h5>
                            <span>cskh247@shop.vn</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="categories py-5">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="../../assets/category/@category.categoryImage">
                                <h5><a style="background-color: rgb(127, 173, 57)" class="text-light" href="@Url.Action("Products", "Customer63135414")">@category.categoryName</a></h5>
                            </div>
